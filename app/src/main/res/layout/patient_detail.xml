<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_circle_default">

        <ImageView
            android:id="@+id/pregnant_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:paddingBottom="@dimen/activity_horizontal_margin"
            android:src="@drawable/pregnancybig" />
        <TextView
            android:id="@+id/patient_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Patient Name"
            android:textColor="@color/colorWhite"
            android:textSize="48sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/pregnant_image" />

    </RelativeLayout>

    <android.support.v7.widget.CardView
        app:cardCornerRadius="2dp"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cpn_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorWhite"
                android:text="CPN1"
                android:textColor="@color/colorPrimary" />

            <Button
                android:id="@+id/cpn_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorWhite"
                android:text="CPN2"
                android:textColor="@color/colorPrimary" />

            <Button
                android:id="@+id/cpn_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorWhite"
                android:text="CPN3"
                android:textColor="@color/colorPrimary" />

            <Button
                android:id="@+id/cpn_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorWhite"
                android:text="CPN4"
                android:textColor="@color/colorPrimary" />

        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>