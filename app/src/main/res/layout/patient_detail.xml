<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp">
    <RelativeLayout
        android:id="@+id/rl_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/pregnant_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:paddingBottom="8dp"
            android:contentDescription="photo logo"
            android:src="@drawable/pregnancybig" />
        <TextView
            android:id="@+id/patient_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Patient Name"
            android:textColor="@color/colorWhite"
            android:textSize="30sp"
            android:freezesText="true"
            android:layout_marginLeft="8dp"
            android:layout_below="@+id/pregnant_image" />
        <TextView
            android:id="@+id/txt_age_grocesse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age grocesse: 36 semaines"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"
            android:layout_marginLeft="8dp"
            android:layout_alignParentLeft="true"
           android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_below="@+id/patient_name"/>
        <TextView
            android:id="@+id/txt_due_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txt_age_grocesse"
            android:layout_below="@+id/patient_name"
            android:layout_alignParentRight="true"
           android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"
            android:gravity="end"
            android:textAlignment="textEnd"
           android:text="DPA:"
            android:layout_marginRight="8dp"
            />

    </RelativeLayout>

    <android.support.v7.widget.CardView

        app:cardCornerRadius="2dp"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/cpn_one"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorWhite"
                android:text="CPN1"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/cpn_two"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorWhite"
                android:text="CPN2"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/cpn_three"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorWhite"
                android:text="CPN3"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/cpn_four"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorWhite"
                android:text="CPN4"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary" />

        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>